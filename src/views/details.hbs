<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Details Page</title>
    <!-- Do not forget to change the path to the css file -->
    <link href="/css/style.css" type="text/css" rel="stylesheet">
</head>

<body>

    <div id="box">

        <nav>
            <img src="/img/logo.webp" alt="logo">

            <ul class="menu">
                <li><a href="/">Home</a></li>
                <li><a href="/create">Create Post</a></li>
                <li><a href="/search">Search</a></li>
                <li><a href="/about">About</a></li>
            </ul>

        </nav>

        <main>

            <section id="details-page">

                <div class="main_card">
                    <div class="card_left">
                        <div class="card_datails">

                            <h1>{{movieData.title}}</h1>
                            <div class="card-movie">
                                <div class="first-info">
                                    <p class="card-genre">Genre:
                                        {{movieData.genre}}</p>
                                    <p class="card-director">Directror:
                                        {{movieData.director}}</p>
                                </div>
                                <div class="second-info">
                                    <p class="card-year">Year:
                                        {{movieData.date}}</p>
                                    <p class="card-ranking">Rating: <span id="stars">{{#each
                                            movieData.ratingStars}}&#x2605;{{/each}}</span></p>
                                    <p class="card-ranking"><span id="stars"></span></p>

                                    <script>
                                        const starsContainer = document.getElementById('stars');
                                        const rating = {{ movieData.rating }};
                                        const stars = '&#x2605;'.repeat(Number(rating));
                                        starsContainer.innerHTML = stars;
                                    </script>

                                </div>

                            </div>

                            <p class="disc">Description:
                                {{movieData.description}}</p>
                        </div>
                    </div>
                    <div class="card_right">
                        <img src={{movieData.imageUrl}} alt="image">
                    </div>
                </div>

            </section>

        </main>