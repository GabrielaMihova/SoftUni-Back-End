{{#each movies}}
            <div class="flip flip-vertical">
              <div class="front">
                <img src={{imageUrl}} alt={{title}} />
              </div>
              <div class="back">
                <h1>{{title}}</h1>
                <h2>Genre: {{genre}}</h2>
                <p>{{description}}</p>
                <a href="/details?id={{_id}}&title={{title}}&genre={{genre}}&director={{director}}&date={{date}}&imageUrl={{imageUrl}}&rating={{rating}}&description={{description}}" class="details">Details</a>
              </div>
            </div>
            {{else}}
            <div class="no-posts">
              <p class="no-offer">There are no posts yet...</p>
            </div>
            {{/each}}